= form_for @owner do |f|
  -if @owner.errors.any?
    #error_explanation
      %h2= "#{pluralize(@owner.errors.count, "error")} prohibited this owner from being saved:"
      %ul
        - @owner.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ownername
    = f.text_field :ownername
  .actions
    = f.submit 'Save'
