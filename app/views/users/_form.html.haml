= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :usename
    = f.text_field :usename
  .field
    = f.label :ownername
    = f.text_field :ownername
  .field
    = f.label :password
    = f.text_field :password
  .actions
    = f.submit 'Save'
